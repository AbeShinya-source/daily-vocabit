APP_NAME="Daily Vocabit"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://dailyvocabit.com
APP_TIMEZONE=Asia/Tokyo

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# MySQL
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=toeic_daily
DB_USERNAME=toeic_user
DB_PASSWORD=

# Session & Cache
SESSION_DRIVER=file
SESSION_LIFETIME=120
CACHE_DRIVER=file

# Sanctum
SANCTUM_STATEFUL_DOMAINS=dailyvocabit.com

# Google OAuth (必要に応じて設定)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Gemini API
GEMINI_API_KEY=YOUR_GEMINI_API_KEY

# Mail (必要に応じて設定)
MAIL_MAILER=log

# Frontend URL (for email links)
FRONTEND_URL=https://dailyvocabit.com
